<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/editProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Edit Profile"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="Done"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/editProfileTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profilepic" />

    <TextView
        android:id="@+id/changePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/profilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Change Profile Photo"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePhoto"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelName"
        android:layout_toRightOf="@id/labelName"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="Jacob West"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelName"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelUsername"
        android:layout_toRightOf="@id/labelUsername"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="jacob_w"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelUsername"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Website"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputWebsite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelWebsite"
        android:layout_toRightOf="@id/labelWebsite"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:hint="Website"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelWebsite"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Bio"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelBio"
        android:layout_toRightOf="@id/labelBio"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="Digital goodies designer @pixsellz\nEverything is designed."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/switchPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelBio"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Switch to Professional Account"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/privateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchPro"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Private Information"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/labelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/privateInfo"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelEmail"
        android:layout_toRightOf="@id/labelEmail"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="jacob.west@gmail.com"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelEmail"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Phone"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelPhone"
        android:layout_toRightOf="@id/labelPhone"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="+1 202 555 0147"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/labelGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/labelPhone"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/labelGender"
        android:layout_toRightOf="@id/labelGender"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:text="Male"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>
